<br />

<div class="booyah-box col-10 offset-1 text-center">
  <div class= "title-box text-center">
    <h1>Current Enrolled Courses</h1>
  </div>
  <br />
  <% current_user.enrolled_courses.each do |course| %>
    <div class="course-box text-center">
      <h3 class="text-center col-10 offset-1 text-center">
        <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
    <%= image_tag course.image, class: 'img-fluid' %>
    <br /><br />
    <div class="row">
      <div class="col-10 offset-1 text-center">
        <%= course.description %>
        <br /><br />
      </div>
      <div class="col-10 offset-1 text-center">
        <%= link_to "More Info", course_path(course), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
      <br class="clr" />
    </div>
    <br />
  <% end %>

  <br /><br />

  <div class="title-box text-center">
    <h1>Current Courses Instructing</h1>
  </div>
  <br />
  <% current_user.courses.each do |course| %>
    <div class="course-box text-center">
      <h3 class="course-title col-10 offset-1 text-center">
        <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
    <%= image_tag course.image, class: 'img-fluid' %>
    <br /><br />
    <div class="row">
      <div class="col-10 offset-1 text-center">
        <%= course.description %>
        <br /><br />
      </div>
    <div class="col-10 offset-1 text-center">
    <%= link_to "More Information", course_path(course), class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
  <br class="clr" />
</div>
<br />
<% end %>
</div>